{
  "name": "api-mcp-servers-builds",
  "version": "0.1.0",
  "description": "Collection of API servers and MCP server builds for various projects",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "nest build",
    "postbuild": "npm run copy-assets",
    "copy-assets": "mkdir -p public && cp -r src/public/* public/",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@bgd-labs/aave-address-book": "^4.22.3",
    "@eslint/js": "^9.29.0",
    "@lifi/sdk": "^3.7.9",
    "@modelcontextprotocol/sdk": "^1.13.0",
    "@morpho-org/blue-sdk": "^4.0.0",
    "@morpho-org/blue-sdk-viem": "^3.1.1",
    "@morpho-org/bundler-sdk-viem": "^3.2.3",
    "@morpho-org/liquidity-sdk-viem": "^2.0.0-next.12",
    "@morpho-org/morpho-blue-bundlers": "^1.1.2",
    "@morpho-org/morpho-ts": "^2.4.0",
    "@morpho-org/simulation-sdk": "^3.1.1",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nktkas/hyperliquid": "^0.22.2",
    "@rekog/mcp-nest": "^1.6.2",
    "@supabase/supabase-js": "^2.50.0",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.12.5",
    "axios": "^1.10.0",
    "cache-manager": "^7.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express": "^5.1.0",
    "fuzzysort": "^3.1.0",
    "globals": "^16.2.0",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typescript-eslint": "^8.34.1",
    "viem": "^2.31.3",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "jest": "^30.0.2",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "packageManager": "pnpm@10.12.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@swc/core"
    ]
  }
}
